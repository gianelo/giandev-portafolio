---
export interface Props {
  lang: string;
  t: (key: string) => string;
}

const { t } = Astro.props;

const facts = ['fact1', 'fact2', 'fact3', 'fact4'];
const seeks = ['seek1', 'seek2', 'seek3', 'seek4'];
---

<section id="leadership" class="py-20 px-6">
  <div class="max-w-4xl mx-auto">

    <!-- Section heading -->
    <div class="reveal flex flex-col items-center mb-14 text-center">
      <span class="text-4xl mb-3">ðŸŽ¯</span>
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white">
        {t('leadership.title')}
      </h2>
      <div class="mt-3 w-12 h-1 rounded-full bg-yellow-400"></div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">

      <!-- Left: Timeline â€” Leadership Experience -->
      <div class="reveal bg-white dark:bg-gray-900/60 border border-gray-200 dark:border-gray-800 rounded-2xl p-8 hover:border-yellow-400/50 dark:hover:border-yellow-500/40 transition-all">
        <h3 class="text-sm font-semibold uppercase tracking-widest text-yellow-600 dark:text-yellow-400 mb-6">
          {t('leadership.left.title')}
        </h3>
        <ol class="relative border-l border-gray-200 dark:border-gray-700 space-y-6 ml-2">
          {facts.map((key) => (
            <li class="ml-4">
              <span class="absolute -left-1.5 mt-1.5 w-3 h-3 rounded-full border-2 border-white dark:border-gray-900 bg-yellow-400"></span>
              <p class="text-sm text-gray-700 dark:text-gray-300 leading-relaxed">
                {t(`leadership.${key}`)}
              </p>
            </li>
          ))}
        </ol>
      </div>

      <!-- Right: What I'm Looking For -->
      <div class="reveal reveal-delay-1 bg-white dark:bg-gray-900/60 border border-gray-200 dark:border-gray-800 rounded-2xl p-8 hover:border-emerald-400/50 dark:hover:border-emerald-500/40 transition-all">
        <h3 class="text-sm font-semibold uppercase tracking-widest text-emerald-600 dark:text-emerald-400 mb-6">
          {t('leadership.right.title')}
        </h3>
        <ul class="space-y-4">
          {seeks.map((key) => (
            <li class="flex items-start gap-3">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" class="mt-0.5 shrink-0 text-emerald-500 dark:text-emerald-400">
                <polyline points="20 6 9 17 4 12"/>
              </svg>
              <span class="text-sm text-gray-700 dark:text-gray-300 leading-relaxed">
                {t(`leadership.${key}`)}
              </span>
            </li>
          ))}
        </ul>
      </div>

    </div>
  </div>
</section>
