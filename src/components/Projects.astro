---
export interface Props {
  lang: string;
  t: (key: string) => string;
}

const { t } = Astro.props;

const projects = [
  {
    key: 'fraud',
    emoji: 'üõ°Ô∏è',
    pills: ['n8n', 'Node.js', 'TypeScript', 'AI/ML', 'Fraud Detection'],
    accentBorder: 'hover:border-violet-400/60 dark:hover:border-violet-500/60',
    accentBar: 'bg-gradient-to-r from-violet-500 to-purple-500',
    accentOutcome: 'text-violet-600 dark:text-violet-400',
    pillStyle: 'bg-violet-50 dark:bg-violet-950/30 text-violet-700 dark:text-violet-300 border-violet-200 dark:border-violet-800',
  },
  {
    key: 'seo',
    emoji: 'üöÄ',
    pills: ['Node.js', 'AI Content Gen', 'PostgreSQL', 'REST API', 'SEO'],
    accentBorder: 'hover:border-blue-400/60 dark:hover:border-blue-500/60',
    accentBar: 'bg-gradient-to-r from-blue-500 to-cyan-500',
    accentOutcome: 'text-blue-600 dark:text-blue-400',
    pillStyle: 'bg-blue-50 dark:bg-blue-950/30 text-blue-700 dark:text-blue-300 border-blue-200 dark:border-blue-800',
  },
  {
    key: 'infra',
    emoji: '‚ö°',
    pills: ['HAProxy', 'MySQL', 'Linux', 'Nginx', 'CI/CD', 'DigitalOcean'],
    accentBorder: 'hover:border-emerald-400/60 dark:hover:border-emerald-500/60',
    accentBar: 'bg-gradient-to-r from-emerald-500 to-teal-500',
    accentOutcome: 'text-emerald-600 dark:text-emerald-400',
    pillStyle: 'bg-emerald-50 dark:bg-emerald-950/30 text-emerald-700 dark:text-emerald-300 border-emerald-200 dark:border-emerald-800',
  },
];
---

<section id="projects" class="py-20 px-6">
  <div class="max-w-4xl mx-auto">

    <!-- Section heading -->
    <div class="reveal flex flex-col items-center mb-14 text-center">
      <span class="text-4xl mb-3">üíº</span>
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white">
        {t('projects.title')}
      </h2>
      <div class="mt-3 w-12 h-1 rounded-full bg-yellow-400"></div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {projects.map((proj, i) => (
        <article
          class={`reveal reveal-delay-${i + 1} relative flex flex-col bg-white dark:bg-gray-900/60 border border-gray-200 dark:border-gray-800 rounded-2xl overflow-hidden transition-all hover:-translate-y-1 hover:shadow-xl hover:shadow-black/5 dark:hover:shadow-black/20 ${proj.accentBorder}`}
        >
          <!-- Color bar at top -->
          <div class={`h-1 w-full ${proj.accentBar}`}></div>

          <div class="p-6 flex flex-col flex-1">
            <!-- Emoji + Title -->
            <div class="flex items-start gap-3 mb-3">
              <span class="text-2xl">{proj.emoji}</span>
              <h3 class="text-base font-bold text-gray-900 dark:text-white leading-snug">
                {t(`projects.${proj.key}.title`)}
              </h3>
            </div>

            <!-- Description -->
            <p class="text-sm text-gray-600 dark:text-gray-400 leading-relaxed mb-5 flex-1">
              {t(`projects.${proj.key}.desc`)}
            </p>

            <!-- Tech pills -->
            <div class="flex flex-wrap gap-1.5 mb-4">
              {proj.pills.map((pill) => (
                <span class={`px-2.5 py-0.5 text-xs font-medium rounded-full border ${proj.pillStyle}`}>
                  {pill}
                </span>
              ))}
            </div>

            <!-- Outcome -->
            <div class={`flex items-start gap-2 p-3 rounded-xl bg-gray-50 dark:bg-gray-800/60 ${proj.accentOutcome}`}>
              <svg xmlns="http://www.w3.org/2000/svg" width="13" height="13" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" class="mt-0.5 shrink-0">
                <polyline points="20 6 9 17 4 12"/>
              </svg>
              <span class="text-xs font-medium leading-snug">
                {t(`projects.${proj.key}.outcome`)}
              </span>
            </div>
          </div>
        </article>
      ))}
    </div>

  </div>
</section>
