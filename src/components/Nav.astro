---
export interface Props {
  lang: string;
  t: (key: string) => string;
}

const { lang, t } = Astro.props;
const otherLang = lang === 'en' ? 'es' : 'en';
const otherLangUrl = `/${otherLang}/`;
---

<header class="fixed top-0 left-0 right-0 z-50 flex items-start justify-center pt-4 pointer-events-none">
  <nav
    id="nav-pill"
    class="pointer-events-auto flex items-center gap-0.5 px-3 py-1.5 rounded-full transition-all duration-300 md:gap-1"
  >
    <!-- Anchor links -->
    <a href="#impact" class="px-3 py-1.5 text-sm font-medium text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white rounded-full hover:bg-gray-100 dark:hover:bg-white/10 transition-all">
      {t('nav.impact')}
    </a>
    <a href="#stack" class="px-3 py-1.5 text-sm font-medium text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white rounded-full hover:bg-gray-100 dark:hover:bg-white/10 transition-all">
      {t('nav.stack')}
    </a>
    <a href="#projects" class="px-3 py-1.5 text-sm font-medium text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white rounded-full hover:bg-gray-100 dark:hover:bg-white/10 transition-all">
      {t('nav.projects')}
    </a>
    <a href="#contact" class="px-3 py-1.5 text-sm font-medium text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white rounded-full hover:bg-gray-100 dark:hover:bg-white/10 transition-all">
      {t('nav.contact')}
    </a>

    <!-- Divider -->
    <div class="w-px h-4 bg-gray-300 dark:bg-gray-700 mx-1 shrink-0"></div>

    <!-- Language switcher -->
    <a
      href={otherLangUrl}
      class="px-2.5 py-1.5 text-xs font-semibold uppercase tracking-wider text-gray-500 dark:text-gray-400 hover:text-yellow-700 dark:hover:text-yellow-400 rounded-full hover:bg-yellow-50 dark:hover:bg-yellow-400/10 transition-all"
      aria-label={`Switch to ${otherLang === 'en' ? 'English' : 'EspaÃ±ol'}`}
    >
      {otherLang === 'en' ? 'EN' : 'ES'}
    </a>

    <!-- Theme toggle -->
    <button
      id="theme-toggle"
      aria-label={t('nav.toggle.dark')}
      class="p-1.5 rounded-full text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white hover:bg-gray-100 dark:hover:bg-white/10 transition-all"
    >
      <!-- Sun icon (shown in dark mode) -->
      <svg id="icon-sun" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="hidden dark:block">
        <circle cx="12" cy="12" r="4"/>
        <path d="M12 2v2M12 20v2M4.93 4.93l1.41 1.41M17.66 17.66l1.41 1.41M2 12h2M20 12h2M6.34 17.66l-1.41 1.41M19.07 4.93l-1.41 1.41"/>
      </svg>
      <!-- Moon icon (shown in light mode) -->
      <svg id="icon-moon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="block dark:hidden">
        <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/>
      </svg>
    </button>
  </nav>
</header>

<script is:inline>
  (function () {
    const nav = document.getElementById('nav-pill');

    function updateNav() {
      if (window.scrollY > 60) {
        nav.classList.add('nav-scrolled');
      } else {
        nav.classList.remove('nav-scrolled');
      }
    }

    window.addEventListener('scroll', updateNav, { passive: true });
    updateNav();

    const btn = document.getElementById('theme-toggle');
    if (btn) {
      btn.addEventListener('click', () => {
        const isDark = document.documentElement.classList.toggle('dark');
        localStorage.setItem('theme', isDark ? 'dark' : 'light');
      });
    }
  })();
</script>
