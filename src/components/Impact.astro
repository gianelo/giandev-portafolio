<section id="impact" class="py-24 px-6 bg-gray-50/50 dark:bg-gray-900/50">
  <div class="max-w-6xl mx-auto">
    <h2 class="reveal text-3xl md:text-4xl font-bold text-center text-gray-900 dark:text-white mb-16">
